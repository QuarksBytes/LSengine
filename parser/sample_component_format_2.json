{
    "module":"2-bit-adder",
    "description":"A simple 2-bit adder circuit",
    "pins":{
      "input":[
        {"name":"A0"},
        {"name":"A1"},
        {"name":"B0"},
        {"name":"B1"},
        {"name":"Cin"},
      ],
      "output":[
        {"name":"S0"},
        {"name":"S1"},
        {"name":"Cout"}        
      ]
    }

    "logic":"temp=((A1<<1)|A0)+((B1<<1)|B0)+Cin\nS0=temp&1\nS1=(temp>>1)&1\nCout=(temp>>2)&1"
}
